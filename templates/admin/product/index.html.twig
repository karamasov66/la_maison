{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Categorie</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in pagination %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.getCategory }}</td>
                <td>{{ product.status }}</td>
                <td>
                    <button class="btn btn-primary"><a href="{{ path('admin_product_show', {'id': product.id}) }}">Consulter</a></button>
                </td>
                <td>
                    <button class="btn btn-warning"><a href="{{ path('admin_product_edit', {'id': product.id}) }}">Modifier</a></button>
                </td>
                <td>
                    {{ include('admin/product/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    <a href="{{ path('admin_product_new') }}">Ajouter un produit</a>
{% endblock %}
